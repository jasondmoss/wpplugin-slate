# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
tab_width = 4
max_line_length = 120

[*.{js,json,php,txt}]
indent_size = 4

[*.{css,htaccess,html,phtml,sql}]
indent_size = 2

[*.{js,php}]
indent_brace_style = K&R
